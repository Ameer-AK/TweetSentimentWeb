<% layout('layouts/boilerplate') %>
<div class="row mb-4 mt-3">
    <div class="col-6 offset-3">
        <h1 class="text-center">Analyze Text</h1>
    </div>
</div>
<div class="card shadow">
    <div class="row card-body" id="analyze-row">
        <div class="col-6">
            <form action="/search" method="POST" id="analyze-form">
                <div class="form-group">
                    <label for="q" class="form-label"><b>Text to analyze</b></label>
                    <textarea class="form-control" name="analyze_text" id="analyze-input" cols="30" rows="5"
                        required></textarea>
                </div>

                <label for="model-form-group" class="form-label"><b>Sentiment Analysis Model</b></label>
                <div class="form-group" id="model-form-group">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="model" id="ml-radio" value="ml" checked>
                        <label class="form-check-label" for="ml-radio">Machine Learning</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="model" id="l-radio" value="l">
                        <label class="form-check-label" for="l-radio">Lexicon</label>
                    </div>
                </div>
                <button class="btn btn-block btn-success">Analyze</button>
            </form>
        </div>
        <div class="col-6 d-flex flex-column align-items-center justify-content-center">
            <h2 id="analyze-result"></h2>
        </div>
    </div>
</div>
<script src="/javascripts/analyze.js"></script>