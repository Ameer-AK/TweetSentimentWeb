<% layout('layouts/boilerplate') %>
<form action="/search" method="POST" id="search-form">
    <input name="q" id="q" cols="30" rows="5"></input>
    <select name="count" id="count-select">
        <option value="100">100</option>
        <option value="500">500</option>
        <option value="1000">1000</option>
        <option value="5000">5000</option>
    </select>
    <div>
        <label for="ml-radio">Machine Learning (recommended)</label>
        <input type="radio" name="model" id="ml-radio" value="ml" checked>
        <label for="l-radio">Lexicon</label>
        <input type="radio" name="model" id="l-radio" value="l">
    </div>
    <div>
        <label for="retweets">Retweets</label>
        <input type="checkbox" name="retweets" id="retweets">
        <label for="replies">Replies</label>
        <input type="checkbox" name="replies" id="replies">
    </div>
    <div>
        <label for="recent-radio">Recent</label>
        <input type="radio" name="type" id="recent-radio" value="recent" checked>
        <label for="popular">Popular</label>
        <input type="radio" name="type" id="popular-radio" value="popular">
        <label for="mixed-radio">Mixed</label>
        <input type="radio" name="type" id="mixed-radio" value="mixed">
    </div>
    <button>search</button>
</form>

<script src="/javascripts/search.js"></script>